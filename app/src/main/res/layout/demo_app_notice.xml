<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/m_t"
        android:textSize="22sp"
        android:fontFamily="@font/trebuc"
        android:textColor="@color/black"
        android:text="Preview app!"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/pm_sec"
        android:layout_marginTop="10dp"
        android:layout_below="@id/m_t"
        android:fontFamily="@font/trebuc"
        android:textColor="@color/black"
        android:text="This is a preview version of Sharlet and does not reflect the final product. Some features may be unstable depending on different devices."
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/pm_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/pm_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I understand"
            android:textAllCaps="false" />
    </RelativeLayout>
</RelativeLayout>