<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bordered">
    <LinearLayout
        android:id="@+id/ll1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_supervised_user_circle_24"/>
        <TextView
            android:layout_marginEnd="100dp"
            android:id="@+id/receiver_name"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center|left"
            android:fontFamily="@font/trebuc"
            android:textSize="17sp"
            android:layout_marginStart="10dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Unknown user"/>

        <TextView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/see_all"
            android:textColor="@color/primary"
            android:gravity="center"
            android:textSize="28sp"
            android:text="\uf022"
            android:fontFamily="@font/font_awesome_regular"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-100dp"/>
        <TextView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/delete"
            android:textColor="@color/primary"
            android:gravity="center"
            android:textSize="28sp"
            android:text="\uf00d"
            android:fontFamily="@font/font_awesome_regular"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/photos"
        android:layout_below="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_photo_library_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
            android:layout_marginEnd="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Photos"/>
            <TextView
                android:id="@+id/photo_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
            <TextView
                android:fontFamily="@font/trebuc"
                android:id="@+id/photo_size"
                android:layout_marginStart="-100dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0B"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/videos"
        android:layout_below="@id/photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_video_library_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Videos"/>
            <TextView
                android:id="@+id/video_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/trebuc"
            android:id="@+id/video_size"
            android:layout_marginStart="-100dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0B"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/audio"
        android:layout_below="@id/videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_library_music_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Audio"/>
            <TextView
                android:id="@+id/audio_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/trebuc"
            android:id="@+id/audio_size"
            android:layout_marginStart="-100dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0B"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/apps"
        android:layout_below="@id/audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_android_24" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Apps"/>
            <TextView
                android:id="@+id/apps_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/trebuc"
            android:id="@+id/apps_size"
            android:layout_marginStart="-100dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0B"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/docs"
        android:layout_below="@id/apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_library_books_24" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Documents"/>
            <TextView
                android:id="@+id/docs_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/trebuc"
            android:id="@+id/doc_size"
            android:layout_marginStart="-100dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0B"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/other"
        android:layout_below="@id/docs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_insert_drive_file_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Others"/>
            <TextView
                android:id="@+id/other_count"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center|left"
                android:fontFamily="@font/trebuc"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="0 files"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/trebuc"
            android:id="@+id/other_size"
            android:layout_marginStart="-100dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0B"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/line_primary"
        android:id="@+id/l2"
        android:layout_below="@id/other"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:ellipsize="middle"
            android:id="@+id/file_info"
            android:textSize="12sp"
            android:fontFamily="@font/trebuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 12, 2022 - 0B - received by Android"/>
    </LinearLayout>

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/send_again"
        android:textColor="@color/primary"
        android:gravity="center"
        android:fontFamily="@font/trebuc"
        android:text="Send again"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/l2"/>

</RelativeLayout>
</RelativeLayout>