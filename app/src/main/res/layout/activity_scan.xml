<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".Scan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.budiyev.android.codescanner.CodeScannerView
        app:flashButtonVisible="false"
        app:frameColor="@color/primary"
        app:autoFocusButtonColor="@color/primary"
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:fontFamily="@font/trebuc"
            android:textColor="@color/primary"
            android:text="@string/autofocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:textAlignment="textEnd"
            android:textSize="15sp"
            android:fontFamily="@font/trebuc"
            android:textColor="@color/primary"
            android:layout_marginStart="50dp"
            android:text="@string/scan_to_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:fontFamily="@font/trebuc"
        android:textColor="@color/primary"
        android:textAlignment="center"
        android:text="@string/keep_the_devices_vertically_aligned"
        android:layout_marginTop="-50dp"
        android:layout_below="@id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>